<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <TextView
        android:id="@+id/song_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"

        android:layout_marginVertical="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0" />

    <TextView
        android:id="@+id/song_length"
        android:layout_width="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="3:22"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:textSize="16sp"/>

    <LinearLayout
        android:id="@+id/song_info"

        app:layout_constraintBottom_toBottomOf="@id/song_list"
        app:layout_constraintStart_toStartOf="@id/song_list"
        android:layout_marginStart="30dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/song_list">

        <TextView
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"

            tools:text="Название песни"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/artist_name"

            android:includeFontPadding="false"
            android:textSize="16sp"
            tools:text="Имя исполнителя"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>